{
  "name": "@text-image-prompt-tools/desktop",
  "version": "1.0.0",
  "description": "提示词优化&图片反推 - 桌面版",
  "main": "dist/main.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"BUILD,ELECTRON\" \"pnpm build:watch\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "node build.js",
    "build:watch": "vite build --watch",
    "build:electron": "pnpm build && electron-builder",
    "build:pkg": "pnpm build && pnpm build:pkg:x64 && rm -f release/distribution.xml 2>/dev/null || true && pnpm build:pkg:arm64",
    "build:pkg:all": "pnpm build && pnpm build:pkg:x64 && pnpm build:pkg:arm64",
    "build:pkg:x64": "pnpm build && electron-builder --mac --x64",
    "build:pkg:arm64": "pnpm build && electron-builder --mac --arm64",
    "build:win": "pnpm build && electron-builder --win",
    "build:win:nsis": "pnpm build && electron-builder --win --x64 --config.win.target=nsis",
    "build:win:portable": "pnpm build && electron-builder --win --x64 --config.win.target=portable",
    "clean:release": "rm -rf release",
    "prebuild:electron": "pnpm build"
  },
  "build": {
    "appId": "com.textimageprompttools.app",
    "productName": "提示词优化工具",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "pkg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "pkg": {
      "installLocation": "/Applications"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "提示词优化工具"
    },
    "files": [
      "dist/main.js",
      "dist/preload.js",
      "dist/renderer/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    },
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.8.2",
    "vite": "^6.0.0",
    "wait-on": "^8.0.1"
  }
}

